@{
    ViewBag.Title = "salemanagertotalmessage";
}

<html>
<head>
    <title></title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="../../Content/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/css/bootstrap-responsive.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/css/style.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/css/jquery.datetimepicker.css" rel="stylesheet" type="text/css" />
    <script src="../../Scripts/jquery.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.sorted.js" type="text/javascript"></script>
    <script src="../../Scripts/bootstrap.js" type="text/javascript"></script>
    <script src="../../Scripts/ckform.js" type="text/javascript"></script>
    <script src="../../Scripts/common.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.datetimepicker.js" type="text/javascript"></script>

    <style type="text/css">
        body {
            padding: 20px;
            background-color:White;
        }
        .sidebar-nav {
            padding: 9px 0;
        }
        .tableleft
        {
            background-color:#EAEAEA;
        }

        @@media (max-width: 980px) {
            /* Enable use of floated navbar text */
            .navbar-text.pull-right {
                float: none;
                padding-left: 5px;
                padding-right: 5px;
            }
        }


    </style>
</head>
    <body>
        <table class="table table-bordered table-hover m10">
            <tr>
                <td width="10%" class="tableleft">客户名称</td>
                <td>
                    <span id="clientname"></span>
                </td>
            </tr>
            <tr>
                <td class="tableleft">行业</td>
                <td><span id="industry"></span></td>
            </tr>
            <tr>
                <td class="tableleft">地址</td>
                <td><span id="address"></span></td>
            </tr>
            <tr>
                <td class="tableleft">区域</td>
                <td><span id="area"></span></td>
            </tr>
            <tr>
                <td width="10%" class="tableleft">客户来源渠道</td>
                <td>
                    <span id="clientfrom"></span>
                </td>
            </tr>
            <tr>
                <td class="tableleft">联系人</td>
                <td><span id="contact"></span></td>
            </tr>
            <tr>
                <td class="tableleft">联系人电话</td>
                <td><span id="contactphone"></span></td>
            </tr>
            <tr>
                <td class="tableleft">预期签订时间</td>
                <td><span id="presigntime"></span></td>
            </tr>
            <tr>
                <td class="tableleft">实际签订时间</td>
                <td><span id="signtime"></span></td>
            </tr>
            <tr>
                <td class="tableleft">预期金额</td>
                <td><span id="preamt"></span></td>
            </tr>
            <tr>
                <td class="tableleft">实际金额</td>
                <td><span id="amt"></span></td>
            </tr>
            <tr>
                <td class="tableleft">销售员姓名</td>
                <td><span id="salename"></span></td>
            </tr>
            <tr>
                <td class="tableleft"></td>
                <td>
                    <button type="button" class="btn btn-success" name="backid" id="backid">返回列表</button>
                </td>
            </tr>
        </table>
    </body>
</html>
<script type="text/javascript">
    $(function () {
        gettotalmessage();
        $("#backid").click(function () {
            window.location.href = "/Client/salemanageclient";
        });
    });

    function gettotalmessage() {
        var idparam = {
            id:@ViewData["id"]
        };
        $.post("/Client/totalmessageclient",idparam,function(res){
            if(res.code=='0'){
                for(var i=0;i<res.rows.length;i++){
                    $("#clientname").html(res.rows[i].clientname);
                    $("#industry").html(res.rows[i].industry);
                    $("#address").html(res.rows[i].address);
                    $("#area").html(res.rows[i].area);
                    $("#clientfrom").html(res.rows[i].clientfrom);
                    $("#contact").html(res.rows[i].contact);
                    $("#contactphone").html(res.rows[i].contactphone);
                    $("#presigntime").html(res.rows[i].presigntime);
                    $("#signtime").html(res.rows[i].signtime);
                    $("#preamt").html(res.rows[i].preamt);
                    $("#amt").html(res.rows[i].amt);
                    $("#salename").html(res.rows[i].salename);
                }
            }
        });
    }
</script>
